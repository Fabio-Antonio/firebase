<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="800dp">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView android:id="@+id/imalista" android:layout_width="136dp" android:layout_height="131dp" android:layout_weight="1" app:srcCompat="@drawable/viversidad" />

        <TextView
            android:id="@+id/textnombre"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="120dp"
            android:fontFamily="casual"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textemail"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="120dp"
            android:fontFamily="casual"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textmensaje"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="120dp"
            android:fontFamily="casual"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>